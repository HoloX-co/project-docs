{
  "name": "holox-project-docs",
  "version": "1.0.0",
  "description": "HoloX Project Documentation with Hugo and Hextra",
  "scripts": {
    "start": "npm run build:css && hugo server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./static/css/tailwind.css",
    "build:css:watch": "npx tailwindcss -i ./assets/css/tailwind.css -o ./static/css/tailwind.css --watch",
    "build": "npm run build:css && hugo --destination ./dist/ --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.4.17"
  }
}
